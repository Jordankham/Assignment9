@{
    ViewData["Title"] = "Edit Movies Here";
}

@model Assignment9.Models.ViewModels.EditMovieViewModel


<form class="form-group" asp-action="EditMovie" method="post">
    <div>
        <label asp-for="@Model.Movie.Category">Category: </label>
        <input asp-for="@Model.Movie.Category" />
    </div>
    <div>
        <label asp-for="@Model.Movie.Title">Title: </label>
        <input asp-for="@Model.Movie.Title" />
    </div>
    <div>
        <label asp-for="@Model.Movie.Year">Year: </label>
        <input asp-for="@Model.Movie.Year" />
    </div>
    <div>
        <label asp-for="@Model.Movie.Director">Director: </label>
        <input asp-for="@Model.Movie.Director" />
    </div>
    <div>
        <label asp-for="@Model.Movie.Rating">Rating: </label>
        <select asp-for="@Model.Movie.Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Movie.Rating">Edited: </label>
        <select asp-for="@Model.Movie.Rating">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Movie.LentTo">LentTo: </label>
        <input asp-for="@Model.Movie.LentTo" />
    </div>
    <div>
        <label asp-for="@Model.Movie.Notes">Notes: </label>
        <input asp-for="@Model.Movie.Notes" />
    </div>
    <div hidden>
        <label asp-for="@Model.Movie.MovieId">Notes: </label>
        <input asp-for="@Model.Movie.MovieId" />
    </div>
    <button type="submit">Update Movie</button>
    <div asp-validation-summary="All"></div>
</form>
<form asp-action="DeleteMovie" method="post">
    <input id="id" name="movieid" value="@Model.Movie.MovieId" hidden />
    <button type="submit">Delete Movie</button>
</form>
<p><a asp-action="MovieList">Exit</a></p>